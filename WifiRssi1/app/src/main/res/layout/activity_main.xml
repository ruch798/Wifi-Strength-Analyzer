<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.wifirssi.MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:text="Wifi Analyser"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/blue" />


    <TextView
        android:id="@+id/networkDetails"
        android:layout_width="279dp"
        android:layout_height="86dp"
        android:layout_above="@+id/measure"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        android:text=" "
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/grey" />


    <Button
        android:id="@+id/measure"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/logshow"
        android:layout_marginBottom="78dp"
        android:background="@color/blue"
        android:onClick="measure"
        android:padding="15dp"
        android:text="Calculate"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/displayFile"
        android:layout_width="125dp"
        android:layout_height="55dp"
        android:layout_alignEnd="@+id/networkDetails"
        android:layout_below="@+id/networkDetails"
        android:background="@color/blue"
        android:onClick="display"
        android:padding="15dp"
        android:text="Display File"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/logshow"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp"
        android:background="@color/blue"
        android:onClick="logshow"
        android:text="View Log"
        android:textColor="@color/white" />


    <ListView
        android:id="@+id/display"
        android:layout_width="wrap_content"
        android:layout_height="152dp"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="77dp"
        android:layout_above="@+id/networkDetails"
        android:layout_centerHorizontal="true"
        android:text="--dB"
        android:textColor="@color/blue"
        android:textSize="70dp" />

</RelativeLayout>
